[module/bspwm]
type = internal/bspwm

; workspace_icon-[0-9]+ = label;icon
  ws-icon-0 =desktop;
  ws-icon-1 =code;
  ws-icon-2 =browse;
  ws-icon-3 =explore;
  ws-icon-4 =music;
  ws-icon-5 =study;
  ws-icon-6 =chat;

 ; Available tags:
 ;   <label-state> (default) - gets replaced with <label-(active|urgent|occupied|empty)>
 ;   <label-mode> - gets replaced with <label-(monocle|tiled|fullscreen|floatin	g|locked|sticky|private)>
 format = <label-state> <label-mode>

 ; If any values for label-dimmed-N area defined, the workspace/mode colors will get overridden
 ; with those values if the monitor is out of focus

 ; Available tokens:
 ;   %name%
 ;   %icon%
 ;   %index%
 ; Default: %icon%  %name%
 label-active = %icon%
 label-active-foreground = ${color.icolor}
 label-active-underline = #5E6B81
 label-active-padding = 1

 ; Available tokens:
 ;   %name%
 ;   %icon%
 ;   %index%
 ; Default: %icon%  %name%
 label-occupied = %icon% %name%
 label-occupied-foreground = ${color.icolor}
 label-occupied-padding = 1

 ; Available tokens:
 ;   %name%
 ;   %icon%
 ;   %index%
 ; Default: %icon%  %name%
 label-urgent = %icon% %name%
 label-urgent-background = #F6F9FF
 label-urgent-padding = 1

 ; Available tokens:
 ;   %name%
 ;   %icon%
 ;   %index%
 ; Default: %icon%  %name%
 label-empty = %icon%
 label-empty-foreground = #b7672d
 label-empty-padding = 1
